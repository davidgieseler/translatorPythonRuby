<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.translator.translatorpythonruby.TranslatorController">
  <top>
    <Label style="-fx-font-size: 20px; -fx-text-alignment: center; -fx-alignment: center;" text="Python / Ruby Translator" BorderPane.alignment="CENTER" />
  </top>
  <center>
    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
      <Label style="-fx-font-size: 14px; -fx-text-alignment: center;" text="Select a .py or .rb file" wrapText="true" />
      <TextField fx:id="dragFile" editable="false" focusTraversable="false" minHeight="50" minWidth="200" onDragDropped="#onDragFileDropped" onDragOver="#onDragOver" promptText="Drag File Here or use the 'Search File' button" style="-fx-alignment: center;" />
      <HBox alignment="CENTER" spacing="15">
        <Button fx:id="searchButton" onAction="#onSearchButtonClick" style="-fx-font-size: 14px;" text="Search File" />
      </HBox>
      <Button fx:id="translateButton" focusTraversable="false" onAction="#onTranslateButtonClick" style="-fx-font-size: 14px;" text="Translate" />
    </VBox>
  </center>
</BorderPane>
